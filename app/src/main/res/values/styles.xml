<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorRed">@color/colorRed</item>
        <item name="colorBlue">@color/colorBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:progressBackgroundTint">#D05A5A5A</item>
        <item name="android:progressTint">#B3B3B3</item>
        <item name="android:colorControlActivated">#EBEBEB</item>
    </style>
    <style name="MyRGButton" parent = "Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">#EBEBEB</item>
        <item name="android:textColor">#EBEBEB</item>
    </style>

</resources>
