<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gray shadow. -->
    <item
        android:left="5dp"
        android:top="5dp">
        <shape>
            <solid android:color="@color/colorGrey" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="5dp"
        android:right="3dp">
        <shape>
            <solid android:color="?attr/colorPrimary" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>